<Window x:Class="TemplateProject.Views.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TemplateProject.Views"
        mc:Ignorable="d"
        Title="EmployeeWindow" Height="180" Width="300" >
    <Grid>
        <StackPanel Margin="0,0,0,0">
            <StackPanel Orientation="Horizontal" Margin="0, 20, 0, 0">
                <Label>ФИО</Label>
                <TextBox x:Name="FioTextBox" Style="{StaticResource TextBox}" Width="190" Margin="45,0,0,0"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0, 20, 0, 0">
                <Label>Должность</Label>
                <TextBox x:Name="PositionTextBox" Style="{StaticResource TextBox}" Width="190" Margin="11,0,0,0"/>
            </StackPanel>
            
            <Button x:Name="SaveButton" Content="Сохранить"  Style="{StaticResource Button}" Margin="0,15,0, 0"  />
        </StackPanel>
    </Grid>
</Window>
