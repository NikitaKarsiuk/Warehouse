<Window x:Class="TemplateProject.Views.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TemplateProject.Views"
        mc:Ignorable="d"
        Title="ProductWindow" Height="220" Width="310">
    <Grid >
        <StackPanel Margin="0,0,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Label>Тип продукта</Label>
                <ComboBox x:Name="TypeTextBox" Width="183" Margin="15,0,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                <Label>Название</Label>
                <TextBox x:Name="PositionTextBox" Style="{StaticResource TextBox}" Width="208" Margin="11,0,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                <Label>Стоимость</Label>
                <TextBox x:Name="CostTextBox" Style="{StaticResource TextBox}" Width="208" Margin="6,0,0,0"/>
            </StackPanel>

            <Button x:Name="SaveButton" Content="Сохранить"  Style="{StaticResource Button}" Margin="100,15,100,0" Width="Auto"  />
        </StackPanel>
    </Grid>
</Window>
