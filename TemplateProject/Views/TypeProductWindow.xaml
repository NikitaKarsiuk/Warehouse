<Window x:Class="TemplateProject.Views.TypeProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TemplateProject.Views"
        mc:Ignorable="d"
        Title="TypeProductWindow" Height="140" Width="310">
    <Grid>
        <StackPanel Margin="0,0,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,20, 0, 0">
                <Label>Тип продукта</Label>
                <TextBox x:Name="TypeProductTextBox" Style="{StaticResource TextBox}" Width="170" Margin="25,0,0,0"/>
            </StackPanel>

            <Button x:Name="SaveButton" Content="Сохранить"  Style="{StaticResource Button}" Margin="0,15,0,0"  />
        </StackPanel>
    </Grid>
</Window>
