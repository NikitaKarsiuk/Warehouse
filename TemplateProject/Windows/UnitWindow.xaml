<Window x:Class="TemplateProject.Windows.UnitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TemplateProject.Windows"
        mc:Ignorable="d"
        Height="120" Width="300"
        KeyUp="Window_KeyUp"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="0,0,0,0">
            <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 0">
                <Label>Единица измерения</Label>
                <TextBox x:Name="NameTextBox" Style="{StaticResource TextBox}" Width="145" Margin="15,0,0,0"/>
            </StackPanel>

            <Button x:Name="SaveButton" Content="Сохранить"  Style="{StaticResource Button}" Margin="0,10,0, 0" Click="SaveButton_Click" />
        </StackPanel>
    </Grid>
</Window>
